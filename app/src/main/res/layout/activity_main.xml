<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.guillem.netejaparcs.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:src="@drawable/escoba" />

    <Button android:id="@+id/newPark"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_weight="1" android:text="Crear Park"
        android:layout_marginTop="300dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button android:id="@+id/modifyPark"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_weight="10" android:text="Editar Park"
        android:layout_marginTop="360dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button android:id="@+id/deleteParc"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_weight="10" android:text="Eliminar Park"
        android:layout_marginTop="420dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
